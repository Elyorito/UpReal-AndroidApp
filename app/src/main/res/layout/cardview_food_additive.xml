<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_food_additive"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/food_additive">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/additive"
            android:textStyle="bold"
            android:textSize="22sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contient des aromes"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:id="@+id/veryGood"
                android:layout_weight="0.33"
                android:src="@drawable/very_good_health"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Contient des aromes"
                android:id="@+id/textVeryGood"
                android:textColor="@color/darkgreen"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:id="@+id/good"
                android:layout_weight="0.33"
                android:src="@drawable/ok_health"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Contient des aromes"
                android:id="@+id/textGood"
                android:textColor="@color/darkorange"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:id="@+id/bad"
                android:layout_weight="0.33"
                android:src="@drawable/bad_health"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Contient des aromes"
                android:id="@+id/textbad"
                android:textColor="@color/red"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>